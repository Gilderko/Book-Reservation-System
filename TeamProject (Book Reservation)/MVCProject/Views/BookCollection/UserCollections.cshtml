@model IEnumerable<BL.DTOs.Entities.BookCollection.BookCollectionPrevDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>My Book Collections</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <input type="button" class="btn btn-primary" value="Create" onclick="location.href='@Url.Action("UserCreateCollection", "BookCollection")'" />
</p>