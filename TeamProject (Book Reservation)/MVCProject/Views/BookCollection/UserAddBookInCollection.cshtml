@model BL.DTOs.ConnectionTables.AddBookInCollectionDTO

@{
    ViewData["Title"] = "AddBookInCollection";
}

<h1>Choose collection:</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserAddBookInCollection">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BookCollectionID" class="control-label">Book collection</label>
                <select asp-for="BookCollectionID" class="form-control" name="BookCollectionID">
                    <option value="">Please select</option>
                    @foreach (var collection in (IEnumerable<BL.DTOs.Entities.BookCollection.BookCollectionPrevDTO>)ViewData["collections"])
                    {
                        <option value="@collection.Id">@collection.Title</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Book" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
