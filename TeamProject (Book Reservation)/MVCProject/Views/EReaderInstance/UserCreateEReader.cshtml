@model BL.DTOs.Entities.EReaderInstance.EReaderInstanceCreateDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Add new E-Reader</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserCreateEReader">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EReaderTemplateID" class="control-label">E-Reader model</label>
                <select asp-for="EReaderTemplateID" class="form-control" name="EReaderTemplateID">
                    <option value="">Please select</option>
                    @foreach (var template in (IEnumerable<BL.DTOs.Entities.EReader.EReaderPrevDTO>)ViewData["eReaderTemplates"])
                    {
                        <option value="@template.Id">@template.CompanyMake - @template.Model</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UserEReaders">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
