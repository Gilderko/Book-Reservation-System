@model BL.DTOs.ConnectionTables.AddEBookInEReaderInstanceDTO

@{
    ViewData["Title"] = "AddEBookInEReaderInstance";
}

<h1>Choose E-Reader:</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserAddEBookInEReader">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EReaderInstanceID" class="control-label">E-Reader</label>
                <select asp-for="EReaderInstanceID" class="form-control" name="EReaderInstanceID">
                    <option value="">Please select</option>
                    @foreach (var eReader in (IEnumerable<BL.DTOs.Entities.EReaderInstance.EReaderInstancePrevDTO>)ViewData["eReaders"])
                    {
                        <option value="@eReader.Id">@eReader.EReaderTemplate.CompanyMake - @eReader.EReaderTemplate.Model: @eReader.Description</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="EBook" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
