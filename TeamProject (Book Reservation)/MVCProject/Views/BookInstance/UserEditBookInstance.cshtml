@using MVCProject.Config
@model BL.DTOs.Entities.BookInstance.BookInstanceDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BookInstance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserEditBookInstance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Condition" class="control-label"></label>
                <select asp-for="Condition" class="form-control" asp-items="Html.GetEnumSelectList<BL.DTOs.Enums.BookInstanceConditionDTO>()">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>
            <input type="hidden" asp-for="BookTemplateID" />
            <input type="hidden" asp-for="BookOwnerId" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UserBookInstances"> | Back to my books</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
